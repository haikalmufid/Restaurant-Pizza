<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SpagettiDetail">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/spagetti2" />

        <TextView
            android:id="@+id/spagetti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="205dp"
            android:text="Spagetti"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: Rp 28.000,00"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textAlignment="viewEnd"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Spaghetti adalah sajian pasta klasik dengan spaghetti al dente yang diselimuti saus marinara merah kaya, daging sapi giling, keju parmesan, dan daun basil segar. Setiap gigitan memberikan pengalaman autentik dari masakan Italia yang lezat."
            android:textColor="@color/brown"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/order_id_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Order Now"
            android:backgroundTint="@color/tomat"
            app:cornerRadius="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/kuning"/>

        <Button
            android:id="@+id/back_id_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Back"
            android:backgroundTint="@color/tomat"
            app:cornerRadius="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/kuning"/>

    </LinearLayout>
</LinearLayout>